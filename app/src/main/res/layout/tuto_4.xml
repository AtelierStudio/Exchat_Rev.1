<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B373E"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="-90dp"
        android:id="@+id/tuto_3_main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title_tutorial_slide4_frame" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tuto_3_main_image"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">
        <Spinner
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_square"
            android:id="@+id/tuto_4_spinner"
            android:layout_width="match_parent"
            android:layout_height="90dp"></Spinner>
        <TextView
            android:textSize="20dp"
            android:textColor="#FFF"
            android:gravity="center"
            android:text="혹시 중요하게 여기는\n환율 정보가 있나요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="#1D262A"
            android:layout_width="40dp"
            android:layout_height="3dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:textColor="#8D9BA3"
            android:gravity="center"
            android:text="Exchat 메인에서 바로 알아보실 수 있도록 도와드립니다\기본값은 미국 USD입니다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tutorial_page_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_square"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:text="다음으로"
        android:textColor="#FFF"
        android:textSize="15dp" />
</RelativeLayout>