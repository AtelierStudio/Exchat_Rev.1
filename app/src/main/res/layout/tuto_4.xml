<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B373E"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:dropDownSelector="@drawable/ic_tutorial_slide4_spinner"
            android:gravity="center"
            android:id="@+id/tuto_4_spinner"
            android:layout_centerInParent="true"
            android:background="@drawable/round_square"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"/>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <kr.edcan.exchat.utils.ExchatTextView
                android:textSize="25sp"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="혹시 중요히 여기는\n환율 정보가 있나요?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="#1D262A"
                android:layout_width="40dp"
                android:layout_height="3dp"/>
            <kr.edcan.exchat.utils.ExchatTextView
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="#8D9BA3"
                android:gravity="center"
                android:text="Exchat 메인에서 바로 알아보실 수 있도록 도와드립니다\n기본값은 미국 USD입니다"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/tutorial_page_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_square"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:text="시작하기"
        android:textColor="#FFF"
        android:textSize="15sp" />
</RelativeLayout>